#!/bin/bash
set -e

if [[ -z "${APP_KEY}" ]]; then
  php please key:generate
else
  echo "APP_KEY supplied. Not generating an APP_KEY."
fi

php please migrate --force
php please db:seed

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- apache2-foreground "$@"
fi

exec "$@"

